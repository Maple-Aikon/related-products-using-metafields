/*============================================================================
  #Testimonial Showcase
==============================================================================*/

.testimonials {
  margin: 50px 0;
  .slick-slide {
    div {
      position: relative;
    }
    img {
      border-radius: 50%;
      @media screen and (max-width: $medium) {
        display: none;
      }
    }
    p {
      padding: 30px 30px 0;
      @media screen and (max-width: $medium) {
        padding: 0 0 0 110px;
      }
      &:before {
        position: absolute;
        position: absolute;
        top: -10px;
        left: 15px;
        content: '"';
        font-family: 'Coustard', serif;
        font-size: 200px;
        line-height: 1;
        color: lighten($colorTextBody, 65%);
        z-index: -1;
        @media screen and (max-width: $medium) {
          left: 27px;
        }
      }
      .by {
        display: block;
        font-weight: 600;
        text-align: right;
      }
    }
  }
}